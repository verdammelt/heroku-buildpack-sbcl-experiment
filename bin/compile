#!/bin/bash

echo "Compiling..."

BUILDPACK_DIR=`dirname $0`/..
BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

echo $BUILDPACK_DIR
echo $BUILD_DIR
echo $CACHE_DIR
echo $ENV_DIR

SBCL_VERSION=2.0.10
SBCL_PKG_NAME=sbcl-${SBCL_VERSION}-x86-64-linux
SBCL_TARBALL=${SBCL_PKG_NAME}-binary.tar.bz2
SBCL_SOURCEFORGE_LOCATION=http://prdownloads.sourceforge.net/sbcl/${SBCL_TARBALL}

echo "Downloading SBCL ${SBCL_VERSION}..."
wget $SBCL_SOURCEFORGE_LOCATION
bunzip2 -c $SBCL_TARBALL | tar xvf -
cd $SBCL_PKG_NAME

echo "Installing SBCL..."
./install.sh --prefix=$BUILD_DIR/sbcl

